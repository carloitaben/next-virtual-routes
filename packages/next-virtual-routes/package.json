{
  "name": "next-virtual-routes",
  "version": "0.1.0",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "keywords": [
    "nextjs",
    "react",
    "programmatic",
    "code-based",
    "routes"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup"
  },
  "peerDependencies": {
    "next": ">=14"
  },
  "dependencies": {
    "debug": "^4.3.7",
    "fs-extra": "^11.2.0",
    "ts-deepmerge": "^7.0.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20",
    "next": "15.0.3",
    "prettier": "^3.3.3",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  },
  "tsup": {
    "outDir": "dist",
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs"
    ],
    "splitting": false,
    "sourcemaps": true,
    "clean": true,
    "dts": true
  }
}